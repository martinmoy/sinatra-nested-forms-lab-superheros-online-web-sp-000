
<h1>Create a Team and Heroes!</h1>

<form action="/teams" method="POST">
    <div class = "team_info" >
        <label for="name"> Team Name: </label>
        <input  type = "text" name = "team[name]">
        <label for="motto">Team Motto:</label>
        <input type="text" name="team[motto]">
    </div>
    
    <div class="hero_group">
        <h3>Hero 1</h3>
        <label for="member1_name">Hero Name:</label> <input type="text" id="member1_name" name="team[members][][name]">
        <label for="member1_power">Hero Power:</label> <input type="text" id="member1_power" name="team[members][][power]">
        <label for="member1_bio">Hero Biography:</label> <input type="text" id="member1_bio" name="team[members][][bio]">
        <br>
        <h3>Hero 2</h3>
        <label for="member2_name">Hero Name:</label> <input type="text" id="member2_name" name="team[members][][name]">
        <label for="member2_power">Hero Power:</label> <input type="text" id="member2_power" name="team[members][][power]">
        <label for="member2_bio">Hero Biography:</label> <input type="text" id="member2_bio" name="team[members][][bio]">
        <br>
        <h3>Hero 3</h3>
        <label for="member3_name">Hero Name:</label> <input type="text" id="member3_name" name="team[members][][name]">
        <label for="member3_power">Hero Power:</label> <input type="text" id="member3_power" name="team[members][][power]">
        <label for="member3_bio">Hero Biography:</label> <input type="text" id="member3_bio" name="team[members][][bio]">
    </div>

    <input type="submit" value="submit">
</form>